<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawerlayout"
    android:background="@drawable/blackbg"
    tools:context=".MainActivity">
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <include layout="@layout/app_main_toolbar"/>

    <ImageView
        android:layout_width="120dp"
        android:src="@drawable/quizimage"
        android:layout_marginTop="15dp"
        android:layout_gravity="center"
        android:layout_height="120dp" />

    <ImageView
        android:layout_width="190dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:id="@+id/bopl"
        android:src="@drawable/programming"
        android:gravity="center"
        android:layout_height="190dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:text="@string/basics_of_programming_logic"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content" />


    <ImageView
        android:layout_width="190dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:id="@+id/bods"
        android:src="@drawable/dsimage"
        android:gravity="center"
        android:layout_height="190dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:text="@string/basics_of_data_structures"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="190dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:id="@+id/oops"
        android:src="@drawable/oopsimage"
        android:gravity="center"
        android:layout_height="190dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:text="@string/object_oriented_programming"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="190dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:id="@+id/os"
        android:src="@drawable/operatingsys"
        android:gravity="center"
        android:layout_height="190dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:text="@string/operating_systems"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content" />


    <ImageView
        android:layout_width="190dp"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:id="@+id/dbms"
        android:src="@drawable/dbmsimage"
        android:gravity="center"
        android:layout_height="190dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:text="@string/database_management_systems"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="wrap_content"
        android:text="@string/online_quiz"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:textColor="#ffa500"
        android:textSize="20sp"
        android:id="@+id/online_quiz"
        android:gravity="center"
        android:linksClickable="true"
        android:autoLink="web"
        android:layout_height="wrap_content"/>

</LinearLayout>
</ScrollView>
    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:id="@+id/mainnavView"
        android:layout_gravity="start"
        android:layout_height="match_parent"
        app:menu="@menu/main_menu">

    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>